<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_user_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="false"
        android:layout_margin="@dimen/regularPadding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_name_user_item"
        style="@style/SubTitleTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/regularPadding"
        android:layout_marginEnd="@dimen/regularPadding"
        android:clickable="false"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_bold"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_item"
        app:layout_constraintStart_toEndOf="@id/iv_user_item"
        app:layout_constraintTop_toTopOf="@id/iv_user_item"
        tools:text="First Last Name" />

</androidx.constraintlayout.widget.ConstraintLayout>